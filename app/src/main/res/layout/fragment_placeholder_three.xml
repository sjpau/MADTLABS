<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A6A08E"
    tools:context="xyz.mobyus.labs.ui.main.PlaceholderFragmentThree">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_span="4" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFF7CE">

            <EditText
                android:id="@+id/edtInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_span="4"
                android:inputType="number" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSqrRoot"
                android:background="#FAF2B0"
                android:text="√" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChangeSign"
                android:background="#FAF2B0"
                android:text="±" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnC"
                android:layout_span="2"
                android:background="#FAF2B0"
                android:text="C"

                />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNumber7"
                android:background="#FAF2B0"
                android:text="7" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNumber8"
                android:background="#FAF2B0"
                android:text="8" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNumber9"
                android:background="#FAF2B0"
                android:text="9" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNumberAdd"
                android:background="#FAF2B0"
                android:text="+" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNumber4"
                android:background="#FAF2B0"
                android:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNumber5"
                android:background="#FAF2B0"
                android:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNumber6"
                android:background="#FAF2B0"
                android:text="6" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNumberSub"
                android:background="#FAF2B0"
                android:text="-" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNumber1"
                android:background="#FAF2B0"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNumber2"
                android:background="#FAF2B0"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNumber3"
                android:background="#FAF2B0"
                android:text="3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNumberMul"
                android:background="#FAF2B0"
                android:text="*" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNumber0"
                android:background="#FAF2B0"
                android:text="0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDot"
                android:background="#FAF2B0"
                android:text="." />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnResult"
                android:background="#FAF2B0"
                android:text="=" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNumberDiv"
                android:background="#FAF2B0"
                android:text="/" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>